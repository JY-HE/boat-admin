{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler", // Vue 3.4+ 推荐配置
        "strict": true,
        "jsx": "preserve",
        "types": [
            "vite/client",
            "unplugin-vue-components/types" // 添加此行以启用自动导入组件的类型支持
        ],
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        // "skipLibCheck": true, // 避免第三方库类型冲突
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "createDirectory.js"
    ],
    "exclude": ["node_modules", "dist"]
}
